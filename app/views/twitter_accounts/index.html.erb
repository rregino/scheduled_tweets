  <h1> Twitter Accounts </h1>
  <%= button_to "Connect a Twitter account", "/auth/twitter", method: :post, class: "btn btn-primary", data: { turbo: false } %>
</div>

<% @twitter_accounts.each do |twitter_account| %>
